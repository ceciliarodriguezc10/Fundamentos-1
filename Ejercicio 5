{
   float c, n, t, i;
   cout<<"Calculadora de interes simple. "<< endl;
   cout <<"Ingrese el monto de dinero: " <<endl;
   cin>>c; 
   cout<<"Ingrese el tiempo en aÃ±os: " << endl;
   cin>> n; 
   cout<<"Ingrese la tasa de interes en un numero real:  "<< endl;
   cin>>t;
   i=(n*(t/100))*c;
