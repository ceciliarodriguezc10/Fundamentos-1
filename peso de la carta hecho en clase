#include <iostream>

using namespace std;

int main()
{
   int p;
	cout<<"Ingrese el peso: ";
	cin>>p;
	if (p<=0)
		cout<<"Error"<<endl;
	else 
		if (p<50)
			cout<<"El costo es de: 1.5"<<endl;
		else 
			if (p<=100)
				cout<<"El costo es de : 4"<<endl;
			else 
				if (p<=200)
					cout<<"El costo es de: 6"<<endl;	
				else
					if(p<350)
						cout<<"El costo es de: 10.5"<<endl;
					else
						if(p<=500)
							cout<<"El costo es de: 15"<<endl;
						else
							if(p>500)
								cout<<"EL MENSAJE NO PUEDE SER ENVIADO COMO CARTA"<<endl;
   return 0;
}
